{
  "manifest_version": 3,
  "name": "Axiom Swap Button for Meteora",
  "version": "0.1.8",
  "description": "Adds Axiom swap and exit buttons on Meteora DLMM pages and assists Sell 100% flow.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage", "windows"],
  "background": {
    "service_worker": "dist/background/serviceWorker.js"
  },
  "host_permissions": [
    "https://app.meteora.ag/*",
    "https://www.meteora.ag/*",
    "https://dlmm-api.meteora.ag/*",
    "https://axiom.trade/*",
    "https://api.dexscreener.com/*",
    "https://api.geckoterminal.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://app.meteora.ag/*", "https://www.meteora.ag/*"],
      "js": ["dist/content/meteora.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://axiom.trade/*"],
      "js": ["dist/content/axiom.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/ui/*", "icons/*"],
      "matches": ["https://app.meteora.ag/*", "https://www.meteora.ag/*"]
    }
  ]
}
